    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'gardenwatch'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gardenwatch",
                    "--package=gardenwatch"
                ],
                "filter": {
                    "name": "gardenwatch",
                    "kind": "bin"
                }
            },
            "args": ["add", "seed"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'gardenwatch'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=gardenwatch",
                    "--package=gardenwatch"
                ],
                "filter": {
                    "name": "gardenwatch",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=cli",
                    "--package=gardenwatch"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}